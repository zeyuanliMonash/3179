{
            
  "data": {
"url": "earthquake_data.csv"
},
"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
"vconcat": [
{

"width": 800,
"height": 400,
"projection": {
"type": "equalEarth",
"rotate": [-140.0, 0]
},
"layer": [
{
  "data": {"sphere": "world"},
  "mark": {
      "type": "geoshape",
      "fill": "#27aedba2"
  }
},
{
"data": {
  "url": "https://raw.githubusercontent.com/zeyuanliMonash/fit3179/main/ne_110m.json",
  "format": {
    "type": "topojson",
    "feature": "ne_110m_graticules_30"
  }
},
"mark": {
  "type": "geoshape",
  "fill": "transparent",
  "stroke": "gray",
  "strokeWidth": 0.5
}
},
{
"data": {
  "url": "https://raw.githubusercontent.com/zeyuanliMonash/fit3179/main/ne_110m.json",
  "format": {
    "type": "topojson",
    "feature": "ne_110m_admin_0_countries"
  }
},
"mark": {
  "type": "geoshape",
  "fill": "gray"
}
},
{
"transform": [
  {
    "calculate": "year(datum.data_time)",
    "as": "year"
  }

  
],

"mark": "circle",
"encoding": {
  "longitude": {
    "field": "longitude",
    "type": "quantitative"
  },
  "latitude": {
    "field": "latitude",
    "type": "quantitative"
  },
  "color": {
    "field": "magnitude",
    "type": "quantitative",
    "scale": {
      "type": "log",
      "domain": [5, 6, 7, 8, 9, 10],
      "range": ["#fdd0a2", "#f8b085", "#f16913", "#d94801", "#a63603", "#7f2704"]
    },
    "legend": {
      "title": "The magnitude of the earthquake",
      "values": [5, 6, 7, 8, 9, 10]
    }
  },
  
  "tooltip": [
    {
      "field": "title",
      "type": "nominal",
      "title": "Earthquake name"
    },
    {
      "field": "magnitude",
      "type": "quantitative",
      "title": "Magnitude"
    },
    {
      "field": "depth",
      "type": "quantitative",
      "title": "The depth km"
    },
    {
      "field": "data_time",
      "type": "temporal",
      "title": "Date and Time"
    }
  ]
}
},
{
"transform": [
  {
    "window": [
      {
        "op": "rank",
        "as": "rank"
      }
    ],
    "sort": [
      {
        "field": "depth",
        "order": "descending"
      }
    ]
  },
  {
    "filter": "datum.rank <= 5"
  },
  {
    "calculate": "'Top: ' + datum.rank + ' Depth: ' + datum.depth",
    "as": "annotation"
  }
],
"mark": {
  "type": "text",
  "color": "black",
  "fontSize": 12,
  "fontWeight": "bold",
  "font": "Arial",
  "align": "center",
  "baseline": "middle"
},
"encoding": {
  "text": {
    "field": "annotation",
    "type": "nominal"
  },
  "longitude": {
    "field": "longitude",
    "type": "quantitative"
  },
  "latitude": {
    "field": "latitude",
    "type": "quantitative"
  },
  "tooltip": [
    {
      "field": "title",
      "type": "nominal",
      "title": "Earthquake Title"
    },
    {
      "field": "magnitude",
      "type": "quantitative",
      "title": "Magnitude"
    },
    {
      "field": "depth",
      "type": "quantitative",
      "title": "Depth"
    },
    {
      "field": "data_time",
      "type": "temporal",
      "title": "Date and Time"
    }
  ]
}
}
]
}

]
}
